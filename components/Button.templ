package components

type ButtonProps struct {
	Type  string
	Name  string
	Value string
}

templ Button(props ButtonProps) {
	<button type={ props.Type } name={ props.Name } value={ props.Value } class="py-2 px-4 bg-blue-500 text-white font-semibold rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:ring-opacity-75">
		{ children... }
	</button>
}
